{
  "name": "@ugenu.io/electrolizer",
  "version": "0.1.1",
  "description": "Automate your electron browserView or browserWindow",
  "main": "dist/index.js",
  "scripts": {
    "test": "nodemon -e ts --exec \"npm run test:main\"",
    "build": "npm run clean && npm run build:types && npm run build:js",
    "clean": "rm -rf dist",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "test:main": "jest --verbose  --config=jest-electron-main.config.js",
    "test:renderer": "jest --verbose --config=jest-electron-renderer.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add ."
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/plugin-transform-typescript": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@jest-runner/electron": "^3.0.0",
    "@types/async": "^3.2.3",
    "@types/basic-auth": "^1.1.3",
    "@types/cheerio": "^0.22.16",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/jquery": "^3.3.33",
    "@types/multer": "^1.4.3",
    "@types/nightmare": "^2.10.4",
    "@types/string-similarity": "^3.0.0",
    "@types/uuid": "^7.0.3",
    "babel-polyfill": "^6.26.0",
    "basic-auth": "^2.0.1",
    "basic-auth-connect": "^1.0.0",
    "electron": "^6.1.12",
    "express": "^4.17.1",
    "husky": "^4.2.5",
    "jest": "^25.5.2",
    "multer": "^1.4.2",
    "serve-static": "^1.14.1",
    "spectron": "^8.0.0",
    "ts-jest": "^25.4.0",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "handlebars": "^4.7.6"
  }
}
